@model IEnumerable<MIDASDataAnalysis.Models.MapUserConnection>

@{
    ViewBag.Title = "Map User & Connection";
}

<h2>Map User & Connection</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Connection Name
        </th>
        <th>
            User
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.tblConnection.ConnectionName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tblUserInfo.UserName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
